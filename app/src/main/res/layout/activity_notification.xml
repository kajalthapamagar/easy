<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notification"
    android:background="@color/white">

    <TextView
        android:id="@+id/notify"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/arrow"
        android:drawablePadding="50dp"
        android:padding="44dp"
        android:paddingStart="45dp"
        android:text="Notification"
        android:textColorHint="@color/green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        app:layout_constraintTop_toBottomOf="@+id/notify"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/tab_bkg"
        android:backgroundTint="@color/Grey"
        android:drawableLeft="@drawable/tick"
        app:layout_constraintTop_toBottomOf="@+id/today"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        android:text="You have successfully edited your profile."
        android:textColor="@color/black"
        android:padding="14dp"
        android:textSize="14sp"
        android:paddingStart="40dp"
        android:drawablePadding="20dp"/>


    <TextView
        android:id="@+id/cancelled"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/tab_bkg"
        android:backgroundTint="@color/Grey"
        android:drawableLeft="@drawable/cancel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:text="Your booking has sucessfully cancelled."
        android:textColor="@color/black"
        android:padding="14dp"
        android:textSize="14sp"
        android:paddingStart="40dp"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit" />

    <TextView
        android:id="@+id/Yesterday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yesterday"
        app:layout_constraintTop_toBottomOf="@+id/cancelled"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/tab_bkg"
        android:backgroundTint="@color/Grey"
        android:drawableLeft="@drawable/tick"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        android:text="Your booking has sucessfully completed."
        android:textColor="@color/black"
        android:padding="14dp"
        android:textSize="14sp"
        android:paddingStart="40dp"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Yesterday"/>




















</androidx.constraintlayout.widget.ConstraintLayout>