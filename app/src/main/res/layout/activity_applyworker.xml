<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".applyworker"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/arrow"
        android:drawablePadding="39dp"
        android:padding="44dp"
        android:paddingStart="35dp"
        android:text="Apply For Worker"
        android:textColorHint="@color/green"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Add"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/tab_bkg"
        android:text="Add"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintTop_toBottomOf="@+id/applysrc" />

    <TextView
        android:id="@+id/applysrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="Select Services"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit"
        android:backgroundTint="@color/Grey"
        android:padding="10dp"
        android:text="Select service"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applysrc" />

    <TextView
        android:id="@+id/upload"
        android:layout_width="320dp"
        android:layout_height="38dp"
        android:layout_marginTop="490dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/tab_bkg"
        android:backgroundTint="@color/Grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Upload File"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:padding="8dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/tab_bkg"
        android:text="Apply"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit"
        android:backgroundTint="@color/Grey"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electrician"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_marginStart="120dp"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/delete"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/select"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="95dp"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/edit"
        android:backgroundTint="@color/Grey"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cleaning"
        android:layout_marginTop="75dp"
        android:textColor="@color/black"
        android:layout_marginStart="120dp"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/delete"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/select"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="95dp"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="115dp"
        android:background="@drawable/edit"
        android:backgroundTint="@color/Grey"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technician"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"
        android:layout_marginStart="120dp"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/delete"
        android:layout_marginTop="114dp"
        app:layout_constraintTop_toBottomOf="@+id/select"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="95dp"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/edit"
        android:backgroundTint="@color/Grey"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ac repair"
        android:layout_marginTop="165dp"
        android:textColor="@color/black"
        android:layout_marginStart="120dp"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/delete"
        android:layout_marginTop="162dp"
        app:layout_constraintTop_toBottomOf="@+id/select"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="95dp"/>

    <TextView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:text="Upload Your CV"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select"/>

</androidx.constraintlayout.widget.ConstraintLayout>